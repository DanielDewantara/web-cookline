<!doctype html>
<html>

  <head prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb# cookline: http://ogp.me/ns/fb/cookline#">
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">

    <meta property="fb:app_id"      content="294113397324835" />
    <meta property="og:type"        content="<%= type %>" />
    <meta property="og:url"         content="<%= url %>" />
    <meta property="og:title"       content="<%= title %>" />
    <meta property="og:description" content="<%= description %>" />
    <meta property="og:image"       content="<%= image %>" />

    <% if (ingredients) {
      ingredients.forEach(function(ingredient) {
        %>
          <meta property="og:ingredients" content="<%= objectUrl('ingredient', ingredient) %>" />
        <%
      });
    } %>

    <style>
      html {
        background: #fff;
      }
      body {
        background: #e0e0e0;
        font-family: sans-serif;
        margin: auto;
        width:320px;
        text-align:center;
        padding-bottom:20px;
      }
      nav {
        background: #000;
        font-size:18px;
        padding:8px;
      }
      nav a {
        color:#fff;
        text-decoration:none;
        margin:0px 8px;
      }
      img {
        border-radius: 8px;
        box-shadow:0 2px 8px #666;
        max-width:260px;
        max-height:200px;
      }
      article {
        text-shadow:0 1px #fff;
      }
      button {
        background:#777;
        border-radius: 18px;
        padding:10px;
        font-size:18px;
        border:2px solid #fff;
        box-shadow:0 2px 8px #666;
        color:#fff;
        text-shadow:0 1px #333;
        display:none;
      }

    </style>

  </head>

  <body>

    <nav>
      <% for (dish in dishes) {
        if (dishes[dish].title != title) {
          %>
            <a href="<%= objectUrl('dish', dish); %>"><%= dishes[dish].title %></a>
          <%
        }
      }; %>
    </nav>

    <article>
      <h1><%= title %></h1>
      <img src='<%=image%>' />
      <p><%= description %></p>
      <button id='login'>Login</button>
      <button id='cook'>Cook</button>
      <button id='logout'>Logout</button>
    </article>

  </body>
</html>


